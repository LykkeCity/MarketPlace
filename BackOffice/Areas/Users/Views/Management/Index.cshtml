@using BackOffice.Translates
@model BackOffice.Areas.Users.Models.UsersManagementIndexViewModel

@{
    Layout = null;
}
<h1>@Phrases.Users</h1>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Id</th>
        <th>@Phrases.FullName</th>
        <th>Admin</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>
@user.Id
            </td>
            <td>
                @user.FullName
            </td>
            <td>
                @if (user.IsAdmin)
                {<span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>

                }
                else
                {
                <span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span>
                }
            </td>
            <td>
                @if (user.Id != "admin")
                {
                <button class="btn btn-success" onclick="ui.showDialog('@Url.Action("EditUserDialog")', { id:'@user.Id' });">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
                }
            </td>
        </tr>
  
    }

    <tr>
        <td colspan="3">

        </td>
        <td>
            <button class="btn btn-warning"
onclick="ui.showDialog('@Url.Action("EditUserDialog")');"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></button>
        </td>

    </tr>
    </tbody>
</table>