@using BackOffice.Translates
@model BackOffice.Areas.Dictionaries.Models.AssetPairsIndexViewModel
@{
    Layout = null;
}
<h1>@Phrases.DictionaryAssetPairs</h1>
<table class="table table-striped" style="width: 90%; margin: auto">
    <tr>
        <th>
            Id
        </th>
        <th>
            @Phrases.BaseAsset
        </th>
        <th>
            @Phrases.QuotingAsset
        </th>
        <th>
            @Phrases.Accuracy
        </th>
        <th>
            
        </th>
    </tr>
    @foreach (var assetPair in Model.AssetPairs)
    {
        <tr>
            <td>
                @assetPair.Id
            </td>
            <td>
                @assetPair.BaseAssetId
            </td>
            <td>
                @assetPair.QuotingAssetId
            </td>
            <td>
                @assetPair.Accuracy
            </td>
            <td style="text-align: right">
                <button class="btn btn-success btn-xs btn-raised"
                        onclick="ui.showDialog('@Url.Action("EditDialog")', {id:'@assetPair.Id'});"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>            
            </td>
        </tr>
    }
    <tr>
        <td colspan="4"></td>
        <td style="text-align: right">
            <button class="btn btn-warning btn-xs btn-raised"
                        onclick="ui.showDialog('@Url.Action("EditDialog")');"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></button>
        </td>
    </tr>
</table>
