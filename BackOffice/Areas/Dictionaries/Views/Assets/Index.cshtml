@using BackOffice.Translates
@model BackOffice.Areas.Dictionaries.Models.AssetsIndexViewModel

@{
    Layout = null;
}
<h1>@Phrases.DictionaryAssets</h1>
<table class="table table-striped" style="width: 90%; margin: auto">
    <tr>
        <th>
            Id
        </th>
        <th>
            @Phrases.AssetName
        </th>
        <th>

        </th>
    </tr>
    @foreach (var asset in Model.Assets)
    {
        <tr>
            <td>
                @asset.Id
            </td>
            <td>
                @asset.Name
            </td>
            <td style="text-align: right">
                <button class="btn btn-xs btn-success btn-raised"
                        onclick="ui.showDialog('@Url.Action("EditAssetDialog")', {id:'@asset.Id'});"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
            </td>
        </tr>
    }
    <tr>
        <td colspan="2">

        </td>
        <td style="text-align: right">
            <button class="btn btn-xs btn-warning btn-raised"
                        onclick="ui.showDialog('@Url.Action("EditAssetDialog")');"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></button>
        </td>
    </tr>
</table>