@using Common
@using LykkeWallet.Strings

@helper RenderEditAndLabel(string caption, string name, string type = null, string value = null, string placeholder = null)
{
    if (placeholder == null)
    {
        placeholder = caption;
    }

    <div class="input-group">
        <span class="input-group-addon">@caption</span>
        @if (string.IsNullOrEmpty(type))
        {
            <input id="@name.FirstLetterLowCase()" name="@name" class="form-control" placeholder="@placeholder" value="@value">
        }
        else
        {
            <input id="@name.FirstLetterLowCase()" name="@name" class="form-control" type="@type" placeholder="@placeholder" value="@value">
        }
    </div>
    <img src="~/Images/shadow-300.png" class="btn-shadow"/>
}


@helper RenderBankCardExpiration(string caption)
{
    var month = DateTime.UtcNow.Month;
    var year = DateTime.UtcNow.Year;

    <div class="input-group">
        <span class="input-group-addon">@caption</span>
        <table style="width:100%">
            <tr>
                <td>
                    <select name="ExpirationMonth" class="form-control">
                        @for (var m = 1; m <= 12; m++)
                        {
                            if (m == month)
                            {
                                <option selected="selected">@m.ToString("00")</option>
                            }
                            else
                            {
                                <option>@m.ToString("00")</option>
                            }
                        }
                    </select>
                </td>
                <td>
                    <select name="ExpirationYear" class="form-control">
                        @for (var y = year; y < year+10; y++)
                        {
                           <option>@y</option>
                        }
                    </select>                        
                </td>
            </tr>
        </table>

    </div>
    <img src="~/Images/shadow-300.png" class="btn-shadow" />
}

