@using LykkeMarketPlace.Strings
@model dynamic

@{
    Layout = null;
}

    <div class="panel panel-default" style="width: 500px; margin: 100px auto 0 auto;">
        <div class="panel-heading">
            <h3 class="panel-title">@Phrases.SignUp</h3>
        </div>
        <div class="panel-body">
            <form id="frmAuth">
                @HelpersUi.RenderEditAndLabelFocused(Phrases.Email, "Email", "email")
                @HelpersUi.RenderEditAndLabel(Phrases.Password, "Password", "password")
                @HelpersUi.RenderEditAndLabel(Phrases.PasswordAgain, "PasswordAgain", "password")
            </form>
            @HelpersUi.RanderOkCancelAction(Phrases.SignUp, Url.Action("SignUp"), "#frmAuth", Url.Action("SignInDialog"), "#entranceContent")
        </div>
    </div>
